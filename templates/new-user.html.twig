{% extends 'base.html.twig' %}
{% block body %}
    <h1>
        Blog: New User
    </h1>

    <form class="col-md-6" action="/users" method="POST">
    	<label>Name:</label>
    	<input name="name" type="text" minlength="4" class="form-control" required></input>
    	<label>Email:</label>
    	<input name="email" type="email"class="form-control" required></input>
    	<label>Password:</label>
    	<input name="password" type="password"class="form-control" required></input>
    	<label>Password confirmation:</label>
    	<input name="password_confirmation" type="password"class="form-control" required> </input>
    	<label></label>
    	<input type="submit" class="btn btn-success"></input>
    </form>

{% endblock %}
